<!-- Header -->
<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <img class="img-responsive" src="<%= asset_path( 'bowiebot.png' ) %>" alt="">
        <div class="intro-text">
          <span class="name">BowieIpsum</span>
          <hr class="star-light">
          <span class="skills"><%= @tagline %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Generate Ipsum Section -->
<section id="generate-ipsum">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>generate ipsum</h2>
        <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4 generate-ipsum-form">
        <div class="form-group">
          <%= button_to "Generate Ipsum", generate_ipsum_path, class: "btn btn-default btn-md generate-ipsum-button" %>
        </div>
        <div class="form-group">
          <%= form_for @song, html: {class: "form-inline"} do |f| %>
            <%= f.label :title %>:
            <%= f.text_field :title, class: "form-control" %>
            <%= f.submit "Add Song", class: "form-control btn btn-default btn-md" %>
          <% end %>
        </div>
        <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: name %>
        <% end -%>
      </div>
      <div class="col-sm-8 generate-ipsum-item">
        <div class="ipsum-well">
          <%= @ipsum %>
        </div>
      </div>
    </div>
  </div>
</section>

